<% content_for :sub_header do %>
  <i class="fa fa-envelope fa-fw"></i> Messages
<% end %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dashboard_messages.each do |dashboard_message| %>
      <tr>
        <td><%= link_to 'Show', dashboard_message %></td>
        <td><%= link_to 'Edit', edit_dashboard_message_path(dashboard_message) %></td>
        <td><%= link_to 'Destroy', dashboard_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', dashboard_new_message_path %>
