<% content_for :sub_header do %>
  <i class="fa fa-table fa-fw"></i> Listing posts
<% end %>

<%= link_to 'New Post', dashboard_blog_new_post_path, class: 'btn btn-success' %>

<table class="table">
  <thead>
    <th>Title</th>
    <th>Published at</th>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.published_at.strftime("%B %d, %Y") %></td>
      </tr>
    <% end %>
  <tbody>
</table>
